@model Consumer.Models.LaunchModel

@{
    ViewBag.Title = Model.AssignmentTitle;
    Layout = "~/Views/Shared/_LayoutLaunch.cshtml";
}

<div data-role="header">
    <a href="@Model.ReturnUrl" data-icon="arrow-l" data-theme="b">@Model.CourseTitle</a>
    <h1>@ViewBag.Title</h1>
</div>

<div data-role="content">
    <div id="wrap">
        @if (Model.IsLtiLink)
        {
            <iframe class="content" src="@Url.Action("LtiLaunch", new { id = Model.AssignmentId })"></iframe>
        }
        else
        {
            <iframe class="content" src="@Model.Url" scrolling="no"></iframe>
        }
    </div>
</div>
