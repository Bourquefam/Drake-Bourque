@model HandleErrorInfo

@{
    ViewBag.Title = "Bad Request";
}

<hgroup class="title">
    <h1 class="error">Error.</h1>
    <h2 class="error">An error occurred while processing your request.</h2>
    <table>
        <tr>
            <td>Exception</td>
            <td>@Model.Exception.Message<br />@Model.Exception.StackTrace</td>
        </tr>
    </table>
</hgroup>
