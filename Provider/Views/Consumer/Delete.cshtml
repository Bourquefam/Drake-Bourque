@model LtiLibrary.Models.Consumer

@{
    ViewBag.Title = Model.Name;
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Delete this LTI Tool Consumer.</h2>
</hgroup>

<fieldset>
    <legend>Consumer</legend>

        <ol>
            <li>
                @Html.LabelFor(model => model.Key)
                @Html.DisplayFor(model => model.Key)
            </li>
            <li>
                @Html.LabelFor(model => model.Secret)
                @Html.DisplayFor(model => model.Secret)
            </li>
        </ol>
</fieldset>

@using (Html.BeginForm()) {
    <p>
        <strong>Are you sure you want to delete this consumer?</strong>
    </p>
    <p>
        <input type="submit" value="Delete" />
        @Html.ActionLink("Back to List", "Index", routeValues: null, htmlAttributes: new { @class = "button" })
    </p>
}
